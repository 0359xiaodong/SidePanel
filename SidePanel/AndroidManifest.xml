<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.hybdms.sidepanel"
    android:versionCode="1"
    android:versionName="1.0 alpha" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="kr.hybdms.sidepanel.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kr.hybdms.sidepanel.Appinfo"
            android:label="@string/title_activity_appinfo"
            android:parentActivityName="kr.hybdms.sidepanel.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.hybdms.sidepanel.MainActivity" />
        </activity>

        <service android:name="kr.hybdms.sidepanel.TouchDetectService" >
            <intent-filter>
                <action android:name="kr.hybdms.sidepanel" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name="kr.hybdms.sidepanel.LeftSidePanel"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_left_side_panel"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
    </application>

</manifest>